#!/usr/bin/env php
<?php

$loader = null;
foreach ([
    __DIR__.'/../../../autoload.php', # COMPOER_HOME/vendor/task/task/bin
    __DIR__.'/../vendor/autoload.php' # ./bin
] as $autoload) {
    if (file_exists($autoload)) {
        $loader = require $autoload;
        break;
    }
}

if (empty($loader)) {
    throw new \Exception('No autoloader found');
}

(new Task\Console\Application)->run();
